# создать такой конфиг
# ~/.ssh/config

Host 51.250.82.243
  Hostname bastion
  IdentityFile ~/.ssh/id_rsa
  StrictHostKeyChecking no

Host 192.168.101.3
  Hostname elasticsearch
  IdentityFile ~/.ssh/id_rsa
  StrictHostKeyChecking no
  ProxyCommand ssh 51.250.82.243 -W %h:%p

