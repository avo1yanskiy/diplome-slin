  Hostname prometheus
  IdentityFile ~/.ssh/id_rsa
  StrictHostKeyChecking no
  ProxyCommand ssh 51.250.82.243 -W %h:%p

Host 192.168.101.6
  Hostname http-1
  IdentityFile ~/.ssh/id_rsa
  StrictHostKeyChecking no
  ProxyCommand ssh 51.250.82.243 -W %h:%p

Host 192.168.101.7
  Hostname kibana
  IdentityFile ~/.ssh/id_rsa
  StrictHostKeyChecking no
  ProxyCommand ssh 51.250.82.243 -W %h:%p

