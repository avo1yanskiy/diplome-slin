# создать такой конфиг
# ~/.ssh/config

Host 51.250.71.36
  Hostname 51.250.71.36
  IdentityFile ~/.ssh/id_rsa
  StrictHostKeyChecking no

Host 192.168.101.3
  Hostname 192.168.101.3
  IdentityFile ~/.ssh/id_rsa
  StrictHostKeyChecking no
  ProxyCommand ssh 51.250.71.36 -W %h:%p

